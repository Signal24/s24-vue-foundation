{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": true,
    "arrowParens": "avoid",
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 150,
    "trailingComma": "none",
    "overrides": [
        {
            "files": ["*.yaml", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}

{
    "name": "@signal24/vue-foundation",
    "type": "module",
    "version": "4.17.0",
    "description": "Common components, directives, and helpers for Vue 3 apps",
    "module": "./dist/vue-foundation.es.js",
    "exports": {
        ".": {
            "import": "./dist/vue-foundation.es.js",
            "types": "./dist/src/index.d.ts"
        },
        "./dist/vue-foundation.css": {
            "import": "./dist/vue-foundation.css",
            "require": "./dist/vue-foundation.css"
        },
        "./vite-plugins": {
            "import": "./dist/src/vite-plugins/index.js",
            "types": "./dist/src/vite-plugins/index.d.ts"
        }
    },
    "typings": "./dist/src/index.d.ts",
    "scripts": {
        "dev": "vite",
        "build": "rm -rf dist && vite build && vue-tsc -p tsconfig.app.json && tsc -p tsconfig.vite-plugins.json && find dist -name '*.tsbuildinfo' -delete",
        "build:watch": "fswatch -o src | xargs -n1 -I{} yarn build",
        "demo": "vite -c ./demo/vite.config.ts ./demo",
        "test:types": "vue-tsc -p tsconfig.vitest.json",
        "test:unit": "vitest",
        "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
        "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
        "test:e2e:dev:remote": "DISPLAY=:0 yarn test:e2e:dev",
        "lint": "eslint --fix .",
        "format": "prettier --write ."
    },
    "license": "MIT",
    "dependencies": {
        "uuid": "^10.0.0"
    },
    "peerDependencies": {
        "@signal24/openapi-client-codegen": "^1.1.0",
        "date-fns": "^3.0.6",
        "lodash": "^4.17.21",
        "vue": "^3.4.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@nabla/vite-plugin-eslint": "^2.0.4",
        "@signal24/openapi-client-codegen": "^1.1.0",
        "@tsconfig/node20": "^20.1.4",
        "@types/eslint__js": "^8.42.3",
        "@types/jsdom": "^21.1.7",
        "@types/lodash": "^4.17.7",
        "@types/node": "^20.16.3",
        "@types/uuid": "^10.0.0",
        "@vitejs/plugin-vue": "^5.1.3",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.5.1",
        "cypress": "^13.14.1",
        "date-fns": "^3.6.0",
        "eslint": "^9.9.1",
        "eslint-plugin-cypress": "^3.5.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.1.3",
        "eslint-plugin-vue": "^9.28.0",
        "jsdom": "^25.0.0",
        "lodash": "^4.17.21",
        "prettier": "^3.3.3",
        "sass": "^1.78.0",
        "start-server-and-test": "^2.0.5",
        "type-fest": "^4.26.0",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.4.0",
        "vite": "^5.4.3",
        "vitest": "^2.0.5",
        "vue": "^3.5.1",
        "vue-tsc": "^2.1.4"
    },
    "packageManager": "yarn@4.0.2"
}

{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["src/**/*.ts", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*", "src/vite-plugins/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "noImplicitAny": true,
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist",
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"]
    }
}

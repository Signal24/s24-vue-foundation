{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["src/**/*.ts", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*", "src/vite-plugins/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "noImplicitAny": true,
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist"
    }
}
